{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <p class="text-center my-5 pitch">Welcome to Go-Pharma, it's a tool that will allow you to save time recovering your medication after a medical consultation.</p>
</div>
<div class="container mt-5 col-lg-4 col-md-4">
    <div class="card bg-light">
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-5 text-center font-weight-normal"><strong>Sign in</strong></h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label class="mt-3" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="row justify-content-center mt-5 mb-3">
                    <button class="btn btn-primary " type="submit">
                        Sign in
                    </button>
                    <a class="btn " href="{{ path('app_register') }}">Sign up</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
