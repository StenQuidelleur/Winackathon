{% extends 'base.html.twig' %}

{% block title %}Prescription{% endblock %}

{% block body %}
    <div class="container">
        <h1>Prescription</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Doctor</th>
                    <td>{{ prescription.name }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ prescription.createdAt ? prescription.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Qrcode</th>
                    <td>{{ prescription.qrcode }}</td>
                </tr>
                <tr>
                    <th>Medications</th>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
